<% provide(:title, "Аутентификация") %>
<h2>Вход</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div><%= f.label :email, "Электронный адрес" %><br />
  <%= f.email_field :email, :value => "mananaxep@gmail.com", autofocus: true %></div>

  <div><%= f.label :password, "Пароль" %><br />
    <%= f.password_field :password, :value => "foobar123123", autocomplete: "off" %></div>

  <% if devise_mapping.rememberable? -%>
    <div>
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, "Запомнить меня" %>
    </div>
  <% end -%>

  <div><%= f.submit "Вход" %></div>
<% end %>

<%= render "devise/shared/links" %>
